{
	"compilerOptions": {
		"strict": true,
		"noImplicitReturns": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"forceConsistentCasingInFileNames": true,
		"preserveConstEnums": true,
		"pretty": true,
		"skipLibCheck": false,
		"lib": ["es2019"],
		"moduleResolution": "node",
		"target": "es2019",
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"inlineSourceMap": false,
		"paths": {
			// prioritize types at the project level (avoids types in npm linked modules)
			"*": ["node_modules/@types/*", "*"]
		},
		"baseUrl": "../src"
	},
	"compileOnSave": true
}
